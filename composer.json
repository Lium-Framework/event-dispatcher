{
    "name": "lium/event-dispatcher",
    "description": "Standard implementation of PSR-14 for event handling.",
    "type": "library",
    "keywords": ["psr-14", "events"],
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Hermann",
            "email": "florian.hermann94@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4",
        "psr/event-dispatcher": "^1.0",
        "psr/container": "^1.1"
    },
    "require-dev": {
        "nunomaduro/phpinsights": "^1.14",
        "pestphp/pest": "^1.0",
        "symfony/var-dumper": "^5.0",
        "vimeo/psalm": "^4.6"
    },
    "suggest": {
        "fig/event-dispatcher-util": "Provide some utilities to work with the PSR-14"
    },
    "autoload": {
        "psr-4": {
            "Lium\\EventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lium\\EventDispatcher\\Test\\": "tests/"
        }
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "scripts": {
        "test:unit": "phpunit",
        "test:static": "psalm",
        "test":[
            "@test:static",
            "@test:unit"
        ]
    }
}
